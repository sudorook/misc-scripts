#! /bin/bash

#
# Utility functions
#

show_error() {
  echo -e $'\033[1;31m'"$*"$'\033[0m' 1>&2
}
export -f show_error
show_info() {
  echo -e $'\033[1;32m'"$*"$'\033[0m'
}
export -f show_info
show_warning() {
  echo -e $'\033[1;33m'"$*"$'\033[0m'
}
export -f show_warning
show_question() {
  echo -e $'\033[1;34m'"$*"$'\033[0m'
}
export -f show_question
ask_question() {
  read -r -p $'\033[1;34m'"$* "$'\033[0m' var
  echo "${var}"
}
export -f ask_question
ask_secret() {
  stty -echo
  read -r -p $'\033[1;34m'"$* "$'\033[0m' var
  stty echo
  echo "${var}"
}
export -f ask_secret
show_success() {
  echo -e $'\033[1;35m'"$*"$'\033[0m'
}
export -f show_success
show_header() {
  echo -e $'\033[1;36m'"$*"$'\033[0m'
}
export -f show_header
show_listitem() {
  echo -e $'\033[1;37m'"$*"$'\033[0m'
}
export -f show_listitem


#
# Global variables
#

# archive destination dir
archivedir=

# backup-home, backup-vms
backup1=
backup2=

# kvm dirs
kvmdir=
kvmshare=

# virtualbox dirs
vboxdir=

# encrypted folder
encryptpath=
decryptpath=

# theme dirs
gtkdir=
icondir=

# thunderbird theme
thunderbirddir=

# zsh dir
zshdir=

# pkgbuild dir
pkgbuilddir=

# project folders
projectdir=
ignoreprojectdirs=()

# music folders
musicdir=

# video folders
videodir=

# get-webseries
mediadir=

# entry
entrydir=
template=
