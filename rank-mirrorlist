set -eu

ROOT="$(dirname "${0}")"

source "${ROOT}"/globals

! check_command rankmirrors sed && exit 3

MIRRORLIST="${1:-/etc/pacman.d/mirrorlist}"

if [ -f "${MIRRORLIST}" ]; then
  rankmirrors --working-only --verbose - < <(sed -n "s,^#\?\(Server = .*\),\1,p" "${MIRRORLIST}" | sort -u)
else
  show_error "ERROR: ${MIRRORLIST@Q} not found. Exiting."
  exit 3
fi
