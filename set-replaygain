#! /bin/bash
set -eu
source globals

#
# Check inputs and requirements
#

! check_command bs1770gain && exit 3

function check_inputs {
  local input

  if ! [ "${#}" -ge 0 ]; then
    show_error "ERROR: no inputs given. Exiting."
  fi

  for input in "${@}"; do
    if ! [ -e "${input}" ]; then
      show_error "ERROR: ${input@Q} not found. Exiting."
      exit 3
    fi
  done
}


#
# Main
#

KEEP=false

OPTIONS=k
LONGOPTIONS=keep
PARSED=$(getopt -o ${OPTIONS} --long ${LONGOPTIONS} -n "${0}" -- "${@}")
eval set -- "${PARSED}"

while [ "${#}" -ge 1 ]; do
  case "${1}" in
    -k|--keep)
      KEEP=true
      shift 1
      ;;
    --)
      shift
      break
      ;;
    *)
      show_error "ERROR: invalid flag."
      exit 3
      ;;
  esac
done

TMPDIR="$(mktemp -d)"
trap 'rm -rf "${TMPDIR}"; exit' INT TERM ERR

# Check that input files/directories exist before computing replay gain.
check_inputs  "${@}"

# Generate name for backup directory.
if [[ "${KEEP}" = true ]]; then
  if [ "${#}" -eq 1 ]; then
    if [ -d "${1}" ]; then
      BACKUPDIR="${1}_$(date +%Y%m%d-%H%M%S)"
    else
      show_warning "Why compute replain gain for one file? Stopping..."
      exit
    fi
  else
    BACKUPDIR="backup_$(date +%Y%m%d-%H%M%S)"
  fi
fi

bs1770gain "${@}" -o "${TMPDIR}"

# Move files into place.
if [ "${#}" -eq 1 ]; then
  if [[ "${KEEP}" = true ]]; then
    mv "${1}" "${BACKUPDIR}"
  else
    rm -r "${1}"
  fi
  mv "${TMPDIR}" "${1}"
else
  for ITEM in "${@}"; do
    if [[ "${KEEP}" = true ]]; then
      mkdir -p "${BACKUPDIR}"
      mv "${ITEM}" "${BACKUPDIR}/"
    else
      rm -r "${ITEM}"
    fi
    mv "${TMPDIR}/$(basename "${ITEM}")" "${ITEM}"
  done
  rmdir "${TMPDIR}"
fi
