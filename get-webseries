#! /bin/bash
set -eu
source globals

function print_usage {
  show_header "Usage: get-webseries"
  show_listitem "  -d|--destination  location for output directory"
  show_listitem "  -n|--name         name of output directory"
  show_listitem "  -u|--url          playlist URL"
  show_listitem "  -r|--resolution   video resolution (e.g. 1080p)"
  show_listitem "  -s|--start        playlist index number to start  downloading"
}

YTDL=yt-dlp

! check_command "${YTDL}" && exit 3

OPTIONS=d:hn:r:s:u:
LONGOPTIONS=destination:,help,name:,resolution:,start:,url:
PARSED=$(getopt -o ${OPTIONS} --long ${LONGOPTIONS} -n "$0" -- "$@")
eval set -- "${PARSED}"

while [ $# -ge 1 ]; do
  case "$1" in
    -d|--destination)
      VIDEODIR="$2"
      shift 2
      ;;
    -h|--help)
      print_usage
      exit
      ;;
    -n|--name)
      NAME="$2"
      shift 2
      ;;
    -u|--url)
      URL="$2"
      shift 2
      ;;
    -r|--resolution)
      RESOLUTION="${2/[pi]/}"
      shift 2
      ;;
    -s|--start)
      START="$2"
      shift 2
      ;;
    --)
      shift
      break
      ;;
    *)
      show_error "ERROR: unknown command line option ${2@Q}."
      exit 3
      ;;
  esac
done

# Prompt for inputs if they were not already specified on the command line.
if ! [[ -v NAME ]]; then
  NAME=$(ask_question "What is the name of the series?");
fi
if ! [[ -v URL ]]; then
  URL=$(ask_question "What is the URL?");
fi
RESOLUTION="${RESOLUTION:-720}"

case "${RESOLUTION}" in
  720p|720i|720)
    HEIGHT=800
    WIDTH=1300
    ;;
  1080p|1080i|1080)
    HEIGHT=1200
    WIDTH=2000
    ;;
  *)
    HEIGHT=800
    WIDTH=1300
    show_warning "WARNING: Using 720p default."
    ;;
esac

if ! [[ -v VIDEODIR ]]; then
  if [[ -v mediadir ]]; then
    if [ -d "${mediadir}" ]; then
      VIDEODIR="${mediadir}/Web Series"
    elif [[ -v videodir ]]; then
      if [ -d "${videodir}" ]; then
        VIDEODIR="${videodir}"
      else
        VIDEODIR="$(pwd)"
      fi
    fi
  fi
fi

mkdir -p "${VIDEODIR}/${NAME}"
cd "${VIDEODIR}/${NAME}"

"${YTDL}" "${URL}" \
  --embed-thumbnail \
  --embed-subs \
  --convert-subs srt \
  --add-metadata \
  --add-chapters \
  ${START:+--playlist-start "${START}"} \
  --prefer-free-formats \
  --download-archive .archive.txt \
  -f "bestvideo[width<${WIDTH}][height<=${HEIGHT}]+bestaudio/best[width<${WIDTH}][height<=${HEIGHT}]/best" \
  --ignore-errors
