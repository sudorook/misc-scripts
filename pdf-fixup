#! /bin/bash
set -eu
source globals

if ! command -v pdftk >/dev/null; then
  show_error "ERROR: pdftk not installed. Exiting."
  exit 3
fi

OPTIONS=i:e:ko:s:
LONGOPTIONS=input:,end:,keep,output:,start:
PARSED=$(getopt -o ${OPTIONS} --long ${LONGOPTIONS} -n "${0}" -- "${@}")
eval set -- "${PARSED}"

while [ ${#} -ge 1 ]; do
  case ${1} in
    -i|--input)
      if ! [ -f "${2}" ]; then
        show_error "ERROR: input ${2} not found. Exiting."
        exit 3
      fi
      if ! [[ "$(file "${2}")" =~ pdf|PDF ]]; then
        show_error "ERROR: PDF not given. Exiting."
        exit 3
      fi
      INPUT="${2}"
      NAME=${2%.*}
      EXTENSION=${2##*.}
      shift 2
      ;;
    -e|--end)
      END="${2}"
      shift 2
      ;;
    -k|--keep)
      KEEP=true
      shift 1
      ;;
    -o|--output)
      if backup_exists && encfs_unmounted; then
        sync_vms
      fi
      shift
      ;;
    -s|--start)
      START="${2}"
      shift 2
      ;;
    --)
      shift
      break
      ;;
    *)
      show_error "ERROR: invalid flag."
      exit 3
      ;;
  esac
done

if ! [[ -v INPUT ]]; then
  show_error "ERROR: input not provided. Exiting."
  exit 3
fi

if ! [[ -v OUTPUT ]]; then
  OUTPUT="${NAME} (new).${EXTENSION}"
fi

if ! [[ -v START ]]; then
  START=1
fi

if ! [[ -v END ]]; then
  END=end
fi

if ! [[ -v KEEP ]]; then
  KEEP=false
fi

TMP="tmp-$$.pdf"
DATA="data-$$.txt"
trap 'rm -f "${TMP}" "${DATA}"; exit' INT TERM ERR

pdftk "$INPUT" cat "${START}"-"${END}" output ${TMP}
pdftk "$INPUT" dump_data output ${DATA}
sed -i "s///g" "${DATA}"
sed -i "/^BookmarkTitle/N;s/\n\([^BookmarkLevel]\)/\1/g" "${DATA}"

if [[ "${START}" -ne 1 ]]; then
  show_info "Manually edit the metadata to fix bookmark and media references."
  show_info "Then, run: pdftk ${TMP} update_info ${DATA} output ${OUTPUT}"
  exit
fi

pdftk ${TMP} update_info ${DATA} output "${OUTPUT}"
if ! $KEEP; then rm "${TMP}" "${DATA}"; fi
