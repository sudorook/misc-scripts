set -eu

ROOT="$(dirname "${0}")"

source "${ROOT}"/globals

! check_command git && exit 3

function head_count {
  git rev-list --since="${UNTIL}" --count --all
}

if [ "${#}" -eq 0 ]; then
  UNTIL="$(date -d now +%s)"
else
  UNTIL="$(date -d "${*}" +%s)"
fi

COUNT="$(head_count)"
BRANCH="$(git branch --show-current)"

if [ -n "${COUNT}" ] && [ "${COUNT}" -gt 0 ]; then
  git push origin HEAD~"${COUNT}":"${BRANCH}"
else
  git push origin "${BRANCH}"
fi
